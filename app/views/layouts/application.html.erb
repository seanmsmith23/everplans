<!DOCTYPE html>
<html>
<head>
  <title>Everplans</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="full-width">

  <% if flash[:notice] %>
    <div class="success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <p class="cntr-txt nav-bar">
    <%= link_to "Create New Questionnaire", new_questionnaire_path %>
    &nbsp&nbsp&nbsp&nbsp&nbsp
    <%= link_to "View Responses", responses_path %>
    &nbsp&nbsp&nbsp&nbsp&nbsp
    <%= link_to "All Questionnaires", root_path %>
  </p>

  <div id="content">
    <%= yield %>
  </div>

</div>

</body>
</html>
